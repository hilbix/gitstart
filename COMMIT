#!/bin/bash

OOPS()
{
{
printf 'OOPS:'
printf ' %q' "$@"
printf '\n'
} >&2
exit 23
}

given()
{
local a="$1" b

shift
for b
do
	[ ".$a" = ".$b" ] && return 0
done
return 1
}

moved()
{
local f t

f="${1%% -> *}"
t="${1#* -> }"

printf '#%-7s %-25q\t-> %q\n' moved "$f" "$t"
git exec git commit -m "$1" --only "$f" "$t"
}

while	IFS='' read -ru6 line
do
	a="${line:3}"
	b="${line:0:3}"
	case "$b" in
	' M ')	t=modified; git add "$a";;
	'M  ')	t=modified;;
	'?? ')	given "$a" "$@" || continue; t=added; git add "$a";;
	'A  ')	t=added;;
	' D ')	printf '#%-7s %q\n' DELETED "$a"; continue;;
	'D  ')	t=deleted;;
	'R  ')	moved "$a"; continue;;
	*)	OOPS unknown "$b:" "$a"
	esac
	case "$a" in
	*/)	printf '#%-7s %q\n' STAGED "$a"; continue;;
	esac
	printf '#%-7s %q\n' "$t" "$a"
	git exec git commit -m "$a $t" --only "$a"
done 6< <(git status --porcelain .)

git status
